<section class="min-h-[60vh] grid place-items-center">
  <div class="card bg-base-100 w-full max-w-md shadow">
    <div class="card-body space-y-4">
      <h2 class="card-title">Iniciar sesión</h2>
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-error"><span><%= error %></span></div>
      <% } %>
      <form method="post" action="/auth/login" class="space-y-3">
        <label class="form-control">
          <div class="label"><span class="label-text">Correo</span></div>
          <input type="email" name="correo" class="input input-bordered" required />
        </label>
        <label class="form-control">
          <div class="label"><span class="label-text">Contraseña</span></div>
          <input type="password" name="password" class="input input-bordered" required />
        </label>
        <button class="btn btn-primary w-full">Entrar</button>
      </form>
    </div>
  </div>
</section>
