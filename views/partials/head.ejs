<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/daisyui@4.12.10/dist/full.min.css" rel="stylesheet" type="text/css" />
<script src="https://cdn.tailwindcss.com"></script>
<script>
  tailwind.config = {
    theme: {
      extend: {
        fontFamily: { sans: ['Inter', 'ui-sans-serif', 'system-ui', 'sans-serif'] },
        colors: {
          brand: {
            50:'#eef2ff',100:'#e0e7ff',200:'#c7d2fe',300:'#a5b4fc',400:'#818cf8',
            500:'#6366f1',600:'#4f46e5',700:'#4338ca',800:'#3730a3',900:'#312e81'
          }
        },
        container: { center: true, padding: '1rem' }
      }
    },
  daisyui: { themes: ["business", "light"] }
  }
  
</script>
<style>
  /* Soft candy theme */
  @keyframes floatY { 0%,100%{ transform: translateY(0)} 50%{ transform: translateY(-6px)} }
  @keyframes wiggle { 0%,100%{ transform: rotate(0)} 25%{ transform: rotate(2deg)} 75%{ transform: rotate(-2deg)} }
  @keyframes shine { 0%{ background-position:-200% 0 } 100%{ background-position:200% 0 } }
  @keyframes gradientMove { 0%{ background-position:0% 50% } 50%{ background-position:100% 50% } 100%{ background-position:0% 50% } }
  /* Soft opacity pulse for highlight */
  @keyframes pulseAlpha { 0%,100%{ opacity:.16 } 50%{ opacity:.30 } }
  /* Seamless moving specular shine */
  @keyframes shineMove { 0%{ background-position: -150% 0 } 100%{ background-position: 150% 0 } }
  @keyframes floatA { 0%{ transform: translate(-10%, -8%) scale(1)} 50%{ transform: translate(6%, 4%) scale(1.05)} 100%{ transform: translate(-10%, -8%) scale(1)} }
  @keyframes floatB { 0%{ transform: translate(8%, 10%) scale(1)} 50%{ transform: translate(-6%, -4%) scale(1.08)} 100%{ transform: translate(8%, 10%) scale(1)} }
  @keyframes hueShift { 0%{ filter: blur(90px) saturate(1.2) brightness(1.06) hue-rotate(0deg)} 100%{ filter: blur(90px) saturate(1.2) brightness(1.06) hue-rotate(360deg)} }

  .soft-card { border-radius: 1.25rem; transition: transform .2s ease, box-shadow .2s ease; backdrop-filter: blur(10px); -webkit-backdrop-filter: blur(10px); }
  .soft-card:hover { transform: translateY(-2px); box-shadow: 0 12px 40px rgba(0,0,0,.18); }

  .candy-btn { color: #0b1020; border-color: transparent;
    background-image: linear-gradient(135deg, #a78bfa, #60a5fa);
    background-size: 200% 100%; transition: background-position .6s ease, transform .2s ease;
  }
  .candy-btn:hover { background-position: 100% 0; transform: translateY(-1px); }

  /* Animated gradient cards (multi-color, smooth) */
  .gradient-card { color: #0f172a; position: relative; overflow: hidden; border: 0; box-shadow: 0 8px 30px rgba(0,0,0,.12); }
  .gradient-card > * { position: relative; z-index: 2; }
  /* Animated gradient layer (seamless alternate) */
  .gradient-card::before { content:''; position:absolute; inset:0; border-radius: inherit; z-index: 1;
    background:
      radial-gradient(60% 55% at 30% 20%, rgba(255,255,255,.55), rgba(255,255,255,0) 60%),
      radial-gradient(70% 60% at 80% 80%, rgba(255,255,255,.25), rgba(255,255,255,0) 60%),
      linear-gradient(135deg, var(--grad-colors));
    background-size: 120% 120%, 140% 140%, 400% 400%;
    background-repeat: no-repeat;
    animation: gradientMove 24s ease-in-out infinite alternate;
    opacity: .72;
  }
  /* Moving specular highlight (seamless) */
  .gradient-card::after { content:''; position:absolute; inset:-15%; z-index:1; pointer-events:none;
    background: linear-gradient(110deg, rgba(255,255,255,0) 35%, rgba(255,255,255,.55) 50%, rgba(255,255,255,0) 65%);
    background-size: 200% 100%;
    animation: shineMove 7.5s ease-in-out infinite alternate, pulseAlpha 6s ease-in-out infinite;
    filter: blur(14px);
    opacity: .5;
  }
  .gradient-pink { --grad-colors: #ffc2e3 0%, #c3b3ff 45%, #a6e0ff 100%; filter: saturate(1.28) brightness(1.16); }
  .gradient-mint { --grad-colors: #7bf2df 0%, #39d0f0 55%, #b7f8e9 100%; filter: saturate(1.24) brightness(1.14); }
  .gradient-sunset { --grad-colors: #ffb3b9 0%, #f6a63a 55%, #ffef9a 100%; filter: saturate(1.22) brightness(1.12); }
  .gradient-violet { --grad-colors: #b9a7ff 0%, #89b8ff 55%, #c3dcff 100%; filter: saturate(1.28) brightness(1.16); }

  /* Theme-specific opacity tuning for the animated layer */
  html[data-theme='dark'] .gradient-card::before { opacity: .64; }
  html[data-theme='light'] .gradient-card::before { opacity: .86; }
  html[data-theme='dark'] .gradient-card::after { opacity: .38; }
  html[data-theme='light'] .gradient-card::after { opacity: .58; }

  .shadow-glow { box-shadow: 0 14px 40px rgba(99,102,241,.25); }

  /* Glass panel (subtle) */
  .glass { background: rgba(255,255,255,0.04); backdrop-filter: blur(8px); -webkit-backdrop-filter: blur(8px); }

  /* Sidebar icon micro-interactions */
  .menu li a { border-radius: .8rem; }
  .menu li a svg { transition: transform .2s ease; }
  .menu li a:hover svg { animation: wiggle .6s ease-in-out; }

  /* Rounder inputs/buttons */
  .btn, .input, .select, .textarea, .card { border-radius: 1rem; }
  .badge { border-radius: 9999px; }

  /* Gradient button primary */
  .btn-gradient { color: #0b1020; border: none; background-image: linear-gradient(135deg, #8b5cf6, #60a5fa, #22d3ee, #34d399); background-size: 220% 100%; animation: gradientMove 10s ease infinite; filter: saturate(1.15) brightness(1.05); }
  .btn-gradient:hover { filter: brightness(1.05); transform: translateY(-1px); }

  /* Soft transparent animated background */
  .bg-soft-anim { position: relative; }
  .bg-soft-anim::before,
  .bg-soft-anim::after {
    content: '';
    position: fixed; inset: -35vmax; pointer-events: none; z-index: 0;
    opacity: .22;
  }
  html[data-theme='light'] .bg-soft-anim::before,
  html[data-theme='light'] .bg-soft-anim::after { opacity: .32; }
  .bg-soft-anim::before {
    background:
      radial-gradient(40% 30% at 20% 20%, rgba(139,92,246,.95), transparent 60%),
      radial-gradient(35% 40% at 80% 30%, rgba(56,189,248,.95), transparent 60%),
      radial-gradient(35% 40% at 30% 85%, rgba(244,114,182,.95), transparent 60%);
    animation: floatA 24s ease-in-out infinite, hueShift 80s linear infinite;
  }
  .bg-soft-anim::after {
    background:
      radial-gradient(35% 35% at 75% 80%, rgba(34,197,94,.95), transparent 60%),
      radial-gradient(35% 35% at 20% 75%, rgba(99,102,241,.95), transparent 60%);
    animation: floatB 28s ease-in-out infinite, hueShift 90s linear infinite;
  }
</style>
